{
  "name": "Albedo signer for Stellar Network",
  "short_name": "Albedo",
  "version": "0.0.4",
  "manifest_version": 2,
  "author": "https://albedo.link",
  "description": "Albedo provides a safe and reliable way to use your Stellar accounts without trusting anyone with your secret key.",
  "content_security_policy": "default-src 'wasm-eval' 'self' https://*.albedo.link https://*.stellar.org/ http://localhost:1237",
  "permissions": [
    "activeTab",
    "https://*.albedo.link/",
    "https://*.stellar.org/"
  ],
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "64": "img/icon64.png",
    "128": "img/icon128.png",
    "512": "img/icon512.png"
  },
  "background": {
    "scripts": [
      "albedo-background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "img/icon16.png",
      "32": "img/icon32.png",
      "48": "img/icon48.png",
      "64": "img/icon64.png",
      "128": "img/icon128.png",
      "512": "img/icon512.png"
    },
    "default_title": "Albedo",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "albedo-contentscript.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "injected-albedo-intent.js"
  ],
  "externally_connectable": {
    "matches": [
      "https://albedo.link/*"
    ]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+V",
        "mac": "Alt+Shift+V",
        "chromeos": "Alt+Shift+V",
        "linux": "Alt+Shift+V"
      }
    }
  },
  "applications": {
    "gecko": {
      "id": "info@stellar.expert",
      "strict_min_version": "72.0"
    }
  }
}